<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lResultId"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lResultTitle"
        android:layout_width="374dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/lResultId"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lResultId"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/lResultLeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lResultTitle"
        android:layout_toRightOf="@id/lResultId"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/lResultTitle"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>